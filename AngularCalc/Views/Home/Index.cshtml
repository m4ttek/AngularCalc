<!DOCTYPE html>
<html ng-app="CalcApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/" />
    <title>AngularCalc by Mateusz Kamiński</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AngularCalc", "Index", null, new { @class = "navbar-brand" })
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a ng-href="/">Kalkulator</a>
                    </li>
                    <li>
                        <a ng-href="/Home/About">O Autorze</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container ng-view body-content">
    </div>
    <hr />
    <footer class="footer">
        <div class="container">
            <p class="text-muted">&copy; AngularCalc by Mateusz Kamiński</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    <script type="text/javascript" src="/Js/app.js"></script>
    <script type="text/javascript" src="/Js/services.js"></script>
</body>
</html>
